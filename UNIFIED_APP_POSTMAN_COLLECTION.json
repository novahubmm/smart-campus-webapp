  "variable": [
    {
      "key": "base_url",
      "value": "http://192.168.100.94:8088/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_type",
      "value": "",
      "type": "string"
    }
