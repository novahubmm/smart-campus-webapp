  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Unified Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "        pm.collectionVariables.set('user_type', response.data.user_type);",
                  "        console.log('Token saved:', response.data.token);",
                  "        console.log('User type:', response.data.user_type);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"login\": \"teacher@example.com\",\n    \"password\": \"password123\",\n    \"device_name\": \"iPhone 15\",\n    \"remember_me\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login endpoint that works for both teachers and guardians. Returns user_type in response to determine app flow."
          }
        },
