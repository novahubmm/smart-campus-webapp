				{
					"name": "Login - Multi-Role (Teacher + Guardian)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.data.tokens) {",
									"        // Save both tokens",
									"        pm.environment.set('teacher_token', jsonData.data.tokens.teacher);",
									"        pm.environment.set('guardian_token', jsonData.data.tokens.guardian);",
									"        pm.environment.set('token', jsonData.data.token);",
									"        pm.environment.set('user_type', jsonData.data.user_type);",
									"        pm.environment.set('available_roles', JSON.stringify(jsonData.data.available_roles));",
									"        ",
									"        console.log('Multi-role login successful!');",
									"        console.log('Teacher token:', jsonData.data.tokens.teacher);",
									"        console.log('Guardian token:', jsonData.data.tokens.guardian);",
									"        console.log('Default role:', jsonData.data.user_type);",
									"        console.log('Available roles:', jsonData.data.available_roles);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"login\": \"multirole@example.com\",\n    \"password\": \"password123\",\n    \"device_name\": \"Postman Test\",\n    \"remember_me\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Login with an account that has BOTH teacher and guardian roles. Should return multi-role response with separate tokens."
					},
					"response": []
				},
