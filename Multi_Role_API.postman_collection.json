					"name": "Login - Single Role (Teacher Only)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.data.token) {",
									"        pm.environment.set('token', jsonData.data.token);",
									"        pm.environment.set('user_type', jsonData.data.user_type);",
									"        console.log('Token saved:', jsonData.data.token);",
									"        console.log('User type:', jsonData.data.user_type);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"login\": \"teacher@example.com\",\n    \"password\": \"password123\",\n    \"device_name\": \"Postman Test\",\n    \"remember_me\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Login with a teacher-only account. Should return single role response."
					},
