{
  "info": {
    "name": "My Classes API",
    "description": "API endpoints for My Classes screen in Guardian Mobile App",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://192.168.100.114:8088/api/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "student_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Setup",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.access_token) {",
                  "        pm.collectionVariables.set('access_token', response.data.access_token);",
                  "        console.log('✓ Token saved:', response.data.access_token.substring(0, 20) + '...');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+959123456789\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/guardian/auth/login",
              "host": ["{{base_url}}"],
              "path": ["guardian", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Students",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.students && response.data.students.length > 0) {",
                  "        const studentId = response.data.students[0].id || response.data.students[0].student_id;",
                  "        pm.collectionVariables.set('student_id', studentId);",
                  "        console.log('✓ Student ID saved:', studentId);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/guardian/students",
              "host": ["{{base_url}}"],
              "path": ["guardian", "students"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "1. Class Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/class-info",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "class-info"]
        },
        "description": "Get basic class information including grade, section, location, and class teacher"
      },
      "response": []
    },
    {
      "name": "2. Class Teachers",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/class-teachers",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "class-teachers"]
        },
        "description": "Get all teachers teaching this class (class teacher + subject teachers)"
      },
      "response": []
    },
    {
      "name": "3. Class Subjects",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/subjects",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "subjects"]
        },
        "description": "Get all subjects taught in this class with teacher info and progress"
      },
      "response": []
    },
    {
      "name": "4. Class Timetable (Current Week)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/timetable",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "timetable"]
        },
        "description": "Get weekly class schedule for current week"
      },
      "response": []
    },
    {
      "name": "5. Class Timetable (Specific Week)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/timetable?week_start_date=2026-02-10",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "timetable"],
          "query": [
            {
              "key": "week_start_date",
              "value": "2026-02-10",
              "description": "Optional: Start date of the week (YYYY-MM-DD)"
            }
          ]
        },
        "description": "Get weekly class schedule for a specific week"
      },
      "response": []
    },
    {
      "name": "6. Class Statistics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/guardian/students/{{student_id}}/class-statistics",
          "host": ["{{base_url}}"],
          "path": ["guardian", "students", "{{student_id}}", "class-statistics"]
        },
        "description": "Get class-level statistics including attendance, performance, and rankings"
      },
      "response": []
    }
  ]
}
